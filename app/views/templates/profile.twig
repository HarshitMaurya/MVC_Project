<html>
    <head>
        <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
        <link rel="stylesheet" href="/assets/css/style.css">
        <script src="/assets/js/bootstrap.min.js"></script>
    </head>
    <body>
        {% include "templates/header.twig" %}
        <div class = "custom-profile-heading container text-center col-sm-12 col-md-10 col-lg-8 col-xl-6">
            <a href = "/profile/{{ user.id }}">
                {{ user.username }}
            </a>
            <br/>
            Karma : {{ karma }}
            <br/>
            Followed By : {{ followData.followers }}
            Follows : {{ followData.followees }}
            {% if loggedIn %}
                {% if loggedIn.id!=user.id %}
                    <form method="POST" action="/follow">
                        {% if isFollowed %}
                            <button type="submit" class="btn btn-sm btn-outline-danger" name="follow-button" value = "{{ user.id }}">
                            Unfollow
                            </button>
                        {% else %}
                            <button type="submit" class="btn btn-lg btn-primary" name="follow-button" value = "{{ user.id }}">
                            Follow
                            </button>
                        {% endif %}
                    </form>
                {% endif %}
            {% endif %}
        </div>
        {% include "templates/link_viewer.twig" %}
    </body>
</html>